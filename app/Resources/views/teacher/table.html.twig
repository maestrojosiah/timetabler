<div class="panel panel-default">
        <div class="panel-body">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Color</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                {% for teacher in teachers %}
                    <tr class="odd gradeX">
                        <td><a href="{{ path('teacher_profile', { teacherId: teacher.id } ) }}">{{ teacher.fName }} {{ teacher.lName }}</a></td>
                        <td style="background-color:{{teacher.color}}">{{ teacher.color }}</td>
                        <td class="center">
                            <a class="btn btn-primary" href="{{ path('edit_teacher', { 'teacherId': teacher.id } ) }}">Edit</a>
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal{{ teacher.id }}">Delete</button>
                            <a href="{{ path('assign_subjects', { teacherId: teacher.id } ) }}" class="btn btn-info">Assign Subjects</a>
                        </td>
                    </tr>
                    <!-- Modal -->
                    <div class="modal fade" id="deleteModal{{ teacher.id }}" role="dialog">
                        <div class="modal-dialog modal-sm">
                          <div class="modal-content">
                            <div class="modal-header">
                              <button type="button" class="close" data-dismiss="modal">&times;</button>
                              <h4 class="modal-title">Are you sure?</h4>
                            </div>
                            <div class="modal-body">
                              <p>Are you sure you want to delete {{ teacher.fName }} {{ teacher.lName }}.</p>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                              <a href="{{ path('delete_teacher', { 'teacherId': teacher.id } ) }}" class="btn btn-danger">Go Ahead</a>
                            </div>
                          </div>
                        </div>
                    </div>

                {% endfor %}
                </tbody>
            </table>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
  