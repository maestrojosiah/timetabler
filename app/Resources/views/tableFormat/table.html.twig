<div class="panel panel-default">
            <a href="{{ path('add_table_format', {'tbl': timetable.id}) }}" class="btn btn-info">Add more</a>
        <div class="panel-body">
            <table width="100%" class="table table-striped table-bordered table-hover" id="">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Activity</th>
                        <th>Duration</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                {% for tableFormat in tableFormats %}
                    <tr class="odd gradeX">
                        <td>{{ tableFormat.title }}</td>
                        <td>{{ tableFormat.activity }}</td>
                        <td>{{ tableFormat.duration }}</td>
                        <td class="center">
                            <a class="btn btn-primary" href="{{ path('edit_tableFormat', { 'tableFormatId': tableFormat.id, 'tbl': timetable.id } ) }}">Edit</a>
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal{{ tableFormat.id }}">Delete</button>
                        </td>
                    </tr>
                    <!-- Modal -->
                    <div class="modal fade" id="deleteModal{{ tableFormat.id }}" role="dialog">
                        <div class="modal-dialog modal-sm">
                          <div class="modal-content">
                            <div class="modal-header">
                              <button type="button" class="close" data-dismiss="modal">&times;</button>
                              <h4 class="modal-title">Are you sure?</h4>
                            </div>
                            <div class="modal-body">
                              <p>Are you sure you want to delete {{ tableFormat.title }}.</p>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                              <a href="{{ path('delete_tableFormat', { 'tableFormatId': tableFormat.id, 'tbl': timetable.id } ) }}" class="btn btn-danger">Go Ahead</a>
                            </div>
                          </div>
                        </div>
                    </div>

                {% endfor %}
                </tbody>
            </table>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
  