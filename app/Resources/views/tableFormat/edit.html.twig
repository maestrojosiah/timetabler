{% extends 'base.html.twig' %}
{% block pagewrapper %}
    {% set action_title = "Edit Timetable Format" %}
    {% embed "templates/pagewrapper.html.twig" %}
        {% block toplinks %}
        {% endblock %}
        {% block charts %}
        {% endblock %}
        {% block otherstuff_lg8 %}
        <form action="" method="post">
			  <div class="form-group">
			    <label for="class" class=" control-label">Title</label>
			    <div class="col-sm-10">
			    	<input type="text" name="form[title]" class="form-control" value="{{form.title}}" placeholder="e.g First"> 
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="class_subject_class" class=" control-label">Activity Type</label>
			    <div class="col-sm-10">
					<select name="form[activity]" id="class_subject_class" class="form-control">
					    <option value="lesson" {% if form.activity == 'lesson' %} selected {% endif %}>Lesson</option>
					    <option value="break" {% if form.activity == 'break' %} selected {% endif %}>Break/Lunch/Games</option>
					</select>	
		    	</div>
			  </div>
			  <div class="form-group">
			    <label for="form-control" class=" control-label">Duration (Minutes)</label>
			    <div class="col-sm-10">
			    	<input type="text" name="form[duration]" class="form-control" value="{{form.duration}}" placeholder="e.g 45"> 
			    </div>
			  </div>
			  <div class="form-group">
			    <div class="col-sm-10">
				  	<input type="submit" class="btn btn-primary" value="SAVE">
				  	<a href="{{ path('list_tableFormats') }}" class="btn btn-success" >LIST</a>
				  	<a href="{{ path('homepage') }}" class="btn btn-danger" >EXIT</a>
			    </div>
			  </div>
			</form>
		{% endblock %}
	{% endembed %}
{% endblock %}