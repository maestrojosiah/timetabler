<div class="panel panel-default">
        <div class="panel-body">
            <a href="{{ path('add_classs', {'tbl': timetable.id} ) }}" class="btn btn-info">Add Class</a>
            <a href="{{ path('list_teachers', {'tbl': timetable.id} ) }}" class="btn btn-info">Teachers List</a>
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Class</th>
                        {# <th>Code</th> #}
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                {% for classs in classes %}
                    <tr class="odd gradeX">
                        <td><a href="">{{ classs.cTitle }}</a></td>
                        {# <td>{{ classs.classsCode }}</td> #}
                        <td class="center">
                            <a class="btn btn-primary" href="{{ path('edit_classs', { 'classsId': classs.id, 'tbl': timetable.id } ) }}">Edit</a>
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal{{ classs.id }}">Delete</button>
                        </td>
                    </tr>
                    <!-- Modal -->
                    <div class="modal fade" id="deleteModal{{ classs.id }}" role="dialog">
                        <div class="modal-dialog modal-sm">
                          <div class="modal-content">
                            <div class="modal-header">
                              <button type="button" class="close" data-dismiss="modal">&times;</button>
                              <h4 class="modal-title">Are you sure?</h4>
                            </div>
                            <div class="modal-body">
                              <p>Are you sure you want to delete {{ classs.cTitle }} ?.</p>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                              <a href="{{ path('delete_classs', { 'classsId': classs.id, 'tbl': timetable.id } ) }}" class="btn btn-danger">Go Ahead</a>
                            </div>
                          </div>
                        </div>
                    </div>

                {% endfor %}
                </tbody>
            </table>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
  