        {% block javascripts %}{% endblock %}
	    {% for message in app.flashes('success') %}
	        <script type="text/javascript">
	            $.notiny({ 
	            	text: '{{ message }}',  
	            	position: 'right-top',
	            	delay: 5000,
	            	theme: 'dark'
	            });
	        </script>
	    {% endfor %}

	    {% for message in app.flashes('error') %}
	        <script type="text/javascript">
	            $.notiny({ 
	            	text: '{{ message }}',  
	            	position: 'right-top',
	            	delay: 5000,
	            	theme: 'light'
	            });
	        </script>
	    {% endfor %}        	
