        {% block javascripts %}{% endblock %}
	    {% for message in app.flashes('success') %}
	        <script type="text/javascript">
	            $.notiny({ text: '{{ message }}',  position: 'left-top' });
	        </script>
	    {% endfor %}

	    {% for message in app.flashes('error') %}
	        <script type="text/javascript">
	            $.notiny({ text: '{{ message }}',  position: 'left-top' });
	        </script>
	    {% endfor %}        	
