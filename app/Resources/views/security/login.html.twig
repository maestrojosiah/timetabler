{% extends 'base.html.twig' %}
{% block navigation %}
{% endblock %}
{% block pagewrapper %}
    {% set action_title = "Login" %}
        {% if error %}
            <div class="alert alert-warning">
            {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}


        <div class="login-box">
          <div class="login-logo">
            <a href="../../index2.html"><b>Time</b>Tabler</a>
          </div>
          <!-- /.login-logo -->
          <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form action="{{ path('login') }}" method="post">
              <div class="form-group has-feedback">
                <input type="email"  name="_username" class="form-control" placeholder="Email" value="{{ last_username }}">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
              </div>
              <div class="form-group has-feedback">
                <input type="password" name="_password" class="form-control" placeholder="Password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
              </div>
              <div class="row" style="padding-left:20px;">
                <div class="col-xs-8">
                  <div class="checkbox icheck">
                    <label>
                      <input type="checkbox"> Remember Me
                    </label>
                  </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                  <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div>
                <!-- /.col -->
              </div>
            </form>
            <!-- /.social-auth-links -->

            <a href="{{ path('user_registration') }}" class="text-center">New User? Register</a>

          </div>
          <!-- /.login-box-body -->
        </div>
<!-- /.login-box -->
{% endblock %}