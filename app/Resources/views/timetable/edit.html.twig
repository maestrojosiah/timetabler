{% extends 'base.html.twig' %}
{% block pagewrapper %}
    {% set action_title = "Edit Timetable" %}
    {% embed "templates/pagewrapper.html.twig" %}
        {% block toplinks %}
        {% endblock %}
        {% block charts %}
        {% endblock %}
            {% block otherstuff_lg12 %}
              {# {{ dump(data) }} #}

            {{ form_start(form, {'method': 'post', 'attr': {'class': '' }} ) }}
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                    {% if not form.vars.valid %}
                      <div class="alert alert-warning">
                      {{ form_errors(form) }}
                      </div>        
                    {% endif %}
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                 <div class="form-group">
                                    <label>Table Title</label>
                                      {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Timetable Title', 'id': 'timetabletitle' }} ) }}
                                    </div>
                                    <div class="form-group">
                                    <label>Classes start at:</label>
                                      {{ form_widget(form.time, {'attr': {'class': 'form-control', 'id': 'start_time' }} ) }}
                                    </div>
                                    <div class="form-group">
                                    <label>Class Range:</label>
                                      {{ form_widget(form.classRange, {'attr': {'class': 'form-control', 'placeholder': 'E.g 4-8', 'id': 'class_range' }} ) }}
                                    </div>
                                  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary' }} ) }}
                                  {{ form_widget(form.saveAndAdd, {'attr': {'class': 'btn btn-info' }} ) }}                               
                                    <!-- /.col-lg-6 (nested) -->
                  `             {{ form_end(form) }}
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            </div>

        {% endblock %}
    {% endembed %}
{% endblock %}
