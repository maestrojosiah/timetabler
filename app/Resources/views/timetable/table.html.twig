<div class="panel panel-default">
        <div class="panel-body">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Starts At</th>
                        <th>Classes</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                {% for timetable in timetables %}
                    <tr class="odd gradeX">
                        <td><a href="{{ path('timetable_profile', { timetableId: timetable.id } ) }}">{{ timetable.title }}</a></td>
                        <td>{{ timetable.time|date('H:i') }}</td>
                        <td>{{ timetable.classRange }}</td>
                        <td class="center">
                            <a class="btn btn-primary" href="{{ path('edit_timetable', { 'timetableId': timetable.id } ) }}">Edit</a>
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal{{ timetable.id }}">Delete</button>
                            <a href="{{ path('timetable_profile', { timetableId: timetable.id } ) }}" class="btn btn-info">View</a>
                        </td>
                    </tr>
                    <!-- Modal -->
                    <div class="modal fade" id="deleteModal{{ timetable.id }}" role="dialog">
                        <div class="modal-dialog modal-sm">
                          <div class="modal-content">
                            <div class="modal-header">
                              <button type="button" class="close" data-dismiss="modal">&times;</button>
                              <h4 class="modal-title">Are you sure?</h4>
                            </div>
                            <div class="modal-body">
                              <p>Are you sure you want to delete {{ timetable.title }}?</p>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                              <a href="{{ path('delete_timetable', { 'timetableId': timetable.id } ) }}" class="btn btn-danger">Go Ahead</a>
                            </div>
                          </div>
                        </div>
                    </div>

                {% endfor %}
                </tbody>
            </table>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
  